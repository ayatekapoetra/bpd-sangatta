{{ script('ajax/datetimes.js') }}
{{ script('plugins/bower_components/pdfmake/build/pdfmake.min') }}
{{ script('plugins/bower_components/pdfmake/build/vfs_fonts') }}
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th width="80">ACT</th>
                <th>Kode</th>
                <th>Tanggal</th>
                <th class="text-right">Jumlah</th>
                <th>Keterangan</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            @each(item in list)
                <tr>
                    <td class="">{{$loop.index + 1}}</td>
                    <td>
                        <button class="btn-print btn btn-inverse btn-xs" data-id="{{item.id}}">
                            <i class="fa fa-print"></i>
                        </button>
                        <a href="/usulan/pangkat/{{item.id}}/show" class="btn-edit btn btn-info btn-xs" data-id="{{item.id}}">
                            <i class="fa fa-eye"></i>
                        </a>
                    </td>
                    <td class="txt-oflo">
                        <strong>{{item.kode}}</strong>
                    </td>
                    <td>
                        <strong class="formatDateList" data-values="{{item.tgl_usulan}}"></strong>
                    </td>
                    <td class="text-right">
                        <strong>{{item.jumlah}}</strong> org
                    </td>
                    <td class="txt-oflo">
                        {{item.keterangan || '-'}}
                    </td>
                    <td>
                        {{item.author?item.author.email : ''}}
                    </td>
                </tr>
            @endeach
        </tbody>
    </table>
</div>